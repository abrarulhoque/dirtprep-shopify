{%- comment -%}
  Product Catalog Section
  Shell template — JS fetches ALL products via AJAX and renders client-side
{%- endcomment -%}

{%- liquid
  assign selected_collection = collections[section.settings.collection]
  if selected_collection == blank
    assign selected_collection = collections.all
  endif
-%}

{{ 'section-product-catalog.css' | asset_url | stylesheet_tag }}

<product-catalog-section
  class="product-catalog page-width"
  data-section-id="{{ section.id }}"
  data-default-view="{{ section.settings.default_view | default: 'list' }}"
  data-collection="{{ selected_collection.handle }}"
>
  {%- comment -%} Section Header {%- endcomment -%}
  <div class="product-catalog__header">
    <h2 class="product-catalog__title">{{ section.settings.title | default: 'Product Catalog' }}</h2>
    {%- if section.settings.description != blank -%}
      <p class="product-catalog__description">{{ section.settings.description }}</p>
    {%- endif -%}
  </div>

  <div class="product-catalog__layout">
    {%- comment -%} === SIDEBAR === {%- endcomment -%}
    <aside class="product-catalog__sidebar" data-filter-sidebar>
      <div class="product-catalog__mobile-filter-header">
        <span>Filters</span>
        <button type="button" data-mobile-filter-close aria-label="Close filters">&times;</button>
      </div>
      {%- comment -%} Filters Header (Desktop) {%- endcomment -%}
      <div class="product-catalog__filters-header">
        <span class="product-catalog__filters-title">
          FILTERS
          <span class="product-catalog__filter-badge" data-filter-count data-count="0">0</span>
        </span>
        <a href="#" class="product-catalog__filters-reset" data-filter-reset>
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 12a9 9 0 1 0 9-9 9.75 9.75 0 0 0-6.74 2.74L3 8"/><path d="M3 3v5h5"/></svg>
          Reset
        </a>
      </div>

      {%- comment -%} Price Range {%- endcomment -%}
      <div class="product-catalog__filter-group">
        <h4 class="product-catalog__filter-label">PRICE RANGE</h4>
        <div class="product-catalog__price-values">
          <span data-price-min-display>$0</span>
          <span>—</span>
          <span data-price-max-display>$0</span>
        </div>
        <div class="product-catalog__price-slider">
          <div class="product-catalog__price-track">
            <div class="product-catalog__price-track-active" data-price-track-active></div>
          </div>
          <input type="range" min="0" max="0" value="0" data-price-min>
          <input type="range" min="0" max="0" value="0" data-price-max>
        </div>
        <div class="product-catalog__price-labels">
          <span>$0</span>
          <span data-price-max-label>$0</span>
        </div>
      </div>

      {%- comment -%} Categories — dynamically populated by JS {%- endcomment -%}
      <div class="product-catalog__filter-group">
        <h4 class="product-catalog__filter-label">CATEGORIES</h4>
        <div class="product-catalog__category-search-wrap">
          <input type="text" class="product-catalog__category-search" data-category-search placeholder="Search categories...">
        </div>
        <ul class="product-catalog__category-list" data-category-list>
          {%- assign sorted_types = shop.types | sort -%}
          {%- for type in sorted_types -%}
            {%- if type != blank -%}
              <li class="product-catalog__category-item" data-category-item="{{ type | escape | downcase }}">
                <input type="checkbox" value="{{ type | escape }}" data-category-checkbox id="cat-{{ forloop.index }}">
                <span class="product-catalog__category-icon" data-icon="{{ type | escape | downcase }}"></span>
                <label class="product-catalog__category-name" for="cat-{{ forloop.index }}">{{ type | escape }}</label>
              </li>
            {%- endif -%}
          {%- endfor -%}
        </ul>
      </div>
    </aside>

    {%- comment -%} Mobile filter overlay {%- endcomment -%}
    <div class="product-catalog__sidebar-overlay" data-mobile-filter-overlay></div>

    {%- comment -%} === MAIN CONTENT === {%- endcomment -%}
    <div class="product-catalog__main" data-product-list>
      {%- comment -%} Search Bar {%- endcomment -%}
      <div class="product-catalog__search">
        <svg class="product-catalog__search-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/></svg>
        <input type="text" class="product-catalog__search-input" data-search-input placeholder="Search products, SKUs, categories...">
      </div>

      {%- comment -%} Toolbar {%- endcomment -%}
      <div class="product-catalog__toolbar">
        <div class="product-catalog__count" data-product-count>
          <strong>0</strong> products
        </div>
        <button type="button" class="product-catalog__mobile-filter-btn" data-mobile-filter-open>
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 3H2l8 9.46V19l4 2v-8.54L22 3z"/></svg>
          Filters
        </button>
        <div class="product-catalog__sort">
          <svg class="product-catalog__sort-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m3 16 4 4 4-4"/><path d="M7 20V4"/><path d="m21 8-4-4-4 4"/><path d="M17 4v16"/></svg>
          <select class="product-catalog__sort-select" data-sort-select>
            <option value="best-selling">Best selling</option>
            <option value="title-ascending">Alphabetically, A-Z</option>
            <option value="title-descending">Alphabetically, Z-A</option>
            <option value="price-ascending">Price, low to high</option>
            <option value="price-descending">Price, high to low</option>
          </select>
        </div>
        <div class="product-catalog__view-toggle">
          <button type="button" class="product-catalog__view-btn" data-view-btn="list" aria-label="List view">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="3" width="7" height="7" rx="1"/><rect x="14" y="3" width="7" height="7" rx="1"/><rect x="3" y="14" width="7" height="7" rx="1"/><rect x="14" y="14" width="7" height="7" rx="1"/>
            </svg>
          </button>
          <button type="button" class="product-catalog__view-btn" data-view-btn="compact" aria-label="Compact view">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="3" y1="6" x2="21" y2="6"/><line x1="3" y1="12" x2="21" y2="12"/><line x1="3" y1="18" x2="21" y2="18"/>
            </svg>
          </button>
        </div>
      </div>

      {%- comment -%} Loading State {%- endcomment -%}
      <div class="product-catalog__loading" data-loading>
        <div class="product-catalog__spinner"></div>
        <p>Loading products...</p>
      </div>

      {%- comment -%} Products Container — populated by JS {%- endcomment -%}
      <div data-products-container style="display:none;"></div>

      {%- comment -%} Empty State {%- endcomment -%}
      <div class="product-catalog__empty" data-empty-state style="display:none;">
        <div class="product-catalog__empty-icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/></svg>
        </div>
        <h3>No products found</h3>
        <p>Try adjusting your filters or search query.</p>
      </div>
    </div>
  </div>
</product-catalog-section>

<script src="{{ 'product-catalog.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Product Catalog",
  "tag": "section",
  "class": "section-product-catalog",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Product Catalog"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Browse our full range of construction technology products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "select",
      "id": "default_view",
      "label": "Default View",
      "options": [
        { "value": "list", "label": "List" },
        { "value": "compact", "label": "Compact" }
      ],
      "default": "list"
    }
  ],
  "presets": [
    {
      "name": "Product Catalog"
    }
  ]
}
{% endschema %}
