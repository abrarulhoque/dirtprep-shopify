{{ 'section-category-grid.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .category-grid {
    background-color: {{ section.settings.background_color }};
  }

  .category-grid__title {
    color: {{ section.settings.heading_color }};
  }

  .category-grid__subtitle {
    color: {{ section.settings.text_color }};
  }

  .category-grid__item {
    border-radius: {{ section.settings.card_border_radius }}px;
    transition: all 0.3s ease;
  }

  .category-grid__item:hover {
    transform: translateY(-{{ section.settings.hover_lift }}px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  }

  .category-grid__image {
    transition: transform 0.3s ease;
  }

  .category-grid__item:hover .category-grid__image {
    transform: scale({{ section.settings.image_scale_hover | divided_by: 100.0 }});
  }

  .category-grid__content {
    background-color: {{ section.settings.card_background_color }};
  }

  .category-grid__category-title {
    color: {{ section.settings.card_heading_color }};
  }

  .category-grid__category-description {
    color: {{ section.settings.card_text_color }};
  }

  .category-grid__product-count {
    color: {{ section.settings.accent_color }};
  }

  .category-grid__button {
    background-color: {{ section.settings.button_background }};
    color: {{ section.settings.button_text_color }};
    border: 1px solid {{ section.settings.button_border_color }};
    border-radius: {{ section.settings.button_border_radius }}px;
  }

  .category-grid__button:hover {
    background-color: {{ section.settings.button_hover_background }};
    color: {{ section.settings.button_hover_text_color }};
  }
{%- endstyle -%}

<div class="category-grid color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    {%- unless section.settings.title == blank -%}
      <div class="title-wrapper center">
        <h2 class="category-grid__title inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          {{ section.settings.title }}
        </h2>
        {%- unless section.settings.subtitle == blank -%}
          <p class="category-grid__subtitle{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
            {{ section.settings.subtitle }}
          </p>
        {%- endunless -%}
      </div>
    {%- endunless -%}

    <div class="grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_tablet }}-col-tablet grid--{{ section.settings.columns_mobile }}-col-mobile gap-{{ section.settings.grid_gap }}">
      {%- for block in section.blocks -%}
        {%- assign collection = block.settings.collection -%}
        {%- assign product_count = collection.products_count | default: 0 -%}

        <div class="grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
             {{ block.shopify_attributes }}
             {% if settings.animations_reveal_on_scroll %}
               data-cascade
               style="--animation-order: {{ forloop.index }};"
             {% endif %}>

          <div class="category-grid__item card{% if block.settings.collection == blank %} card--placeholder{% endif %}">
            <div class="category-grid__image-wrapper">
              {%- if collection.featured_image -%}
                <img
                  src="{{ collection.featured_image | image_url: width: 600 }}"
                  alt="{{ collection.featured_image.alt | escape }}"
                  class="category-grid__image"
                  loading="lazy"
                  width="{{ collection.featured_image.width }}"
                  height="{{ collection.featured_image.height }}"
                >
              {%- elsif block.settings.custom_image -%}
                <img
                  src="{{ block.settings.custom_image | image_url: width: 600 }}"
                  alt="{{ block.settings.custom_image.alt | escape }}"
                  class="category-grid__image"
                  loading="lazy"
                  width="{{ block.settings.custom_image.width }}"
                  height="{{ block.settings.custom_image.height }}"
                >
              {%- else -%}
                <div class="category-grid__image placeholder-svg">
                  {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
              {%- endif -%}
            </div>

            <div class="category-grid__content card__content">
              <div class="category-grid__header">
                <h3 class="category-grid__category-title">
                  {%- if block.settings.custom_title != blank -%}
                    {{ block.settings.custom_title }}
                  {%- elsif collection -%}
                    {{ collection.title }}
                  {%- else -%}
                    Category Title
                  {%- endif -%}
                </h3>

                {%- if section.settings.show_arrow -%}
                  <span class="category-grid__arrow">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <line x1="7" y1="17" x2="17" y2="7"></line>
                      <polyline points="7,7 17,7 17,17"></polyline>
                    </svg>
                  </span>
                {%- endif -%}
              </div>

              {%- unless block.settings.custom_description == blank and collection.description == blank -%}
                <p class="category-grid__category-description">
                  {%- if block.settings.custom_description != blank -%}
                    {{ block.settings.custom_description }}
                  {%- else -%}
                    {{ collection.description | strip_html | truncate: 120 }}
                  {%- endif -%}
                </p>
              {%- endunless -%}

              <div class="category-grid__footer">
                {%- if section.settings.show_product_count -%}
                  <span class="category-grid__product-count">
                    {%- if block.settings.custom_count != blank -%}
                      {{ block.settings.custom_count }}
                    {%- elsif collection -%}
                      {{ product_count }}
                      {%- if product_count == 1 -%}
                        {{ 'sections.category_grid.product' | t }}
                      {%- else -%}
                        {{ 'sections.category_grid.products' | t }}
                      {%- endif -%}
                    {%- else -%}
                      0 {{ 'sections.category_grid.products' | t }}
                    {%- endif -%}
                  </span>
                {%- endif -%}

                {%- if section.settings.show_button -%}
                  <a href="{{ collection.url | default: '#' }}" class="category-grid__button button button--small">
                    {{ section.settings.button_text | default: 'Browse' }}
                  </a>
                {%- endif -%}
              </div>
            </div>

            {%- if collection.url -%}
              <a href="{{ collection.url }}" class="category-grid__link full-unstyled-link" aria-label="{{ collection.title | escape }}"></a>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

